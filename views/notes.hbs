<div class="notes-list">
    <h3>{{ title }}</h3>
    <form action="/notes/delete/note" method="POST">
        {{#if notes.length }}
            <div class="row">
                    {{#each notes}}
                    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
                        <div class="card">
                            <div class="card-height-indicator"></div>
                            <div class="card-content">
                                <div class="card-image" data-note-id="{{ this.id }}">
                                    <p>{{{ this.note }}}</p>
                                </div>
                                <div class="card-body">
                                    <h4>{{ this.title }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each }}

            </div>
        {{else}}
            Nothing to see here! :\
        {{/if}}
    </form>
</div>

<script>
    $(function () {
       $('.card .card-image').on('click', function ($event) {
           var id = $(this).data('note-id');
           window.location.href = '/notes/edit/' + id;
       });
    });
</script>
